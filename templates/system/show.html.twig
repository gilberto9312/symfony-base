{% extends 'base.html.twig' %}

{% block title %}System{% endblock %}

{% block body %}
    <h1>System</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ system.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ system.name }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ system.state ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>LocationFileImage</th>
                <td>{{ system.locationFileImage }}</td>
            </tr>
            <tr>
                <th>Access</th>
                <td>{{ system.access }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ system.type }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ system.position }}</td>
            </tr>
            <tr>
                <th>CodSystem</th>
                <td>{{ system.codSystem }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('system_index') }}">back to list</a>

    <a href="{{ path('system_edit', {'id': system.id}) }}">edit</a>

    {{ include('system/_delete_form.html.twig') }}
{% endblock %}
